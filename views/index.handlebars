<section class="py-2">
    <div class="row">
        <div class="col-md-6 text-center">
            <h1 class="display-3 mt-5 pt-5 text-center">Online Goods Store</h1>
            <p class="lead my-3">Buy goods online</p>

            <form action="/charge" method="POST">
                <script
                        src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                        data-key="{{publishable_key}}"
                        data-amount="1300"
                        data-name="Product"
                        data-description="Buying from the Online Goods Store"
                        data-image="/images/marketplace.png"
                        data-locale="auto"
                        data-currency="usd">
                </script>
            </form>

        </div>

        <div class="col-md-6">
            <img src="/images/agree.png" class="img-fluid" alt="Agreement">

        </div>

    </div>

</section>